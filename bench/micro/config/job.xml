<job>
  <userNum>4000</userNum>
  <minUid>1</minUid>
  <populateThreads>10</populateThreads>
  <threadPerNode>16</threadPerNode>
  <rampupTime>30</rampupTime>
  <measureTime>60</measureTime>
  <beforeThinkTime>0</beforeThinkTime>
  <afterThinkTime>0</afterThinkTime>
  <maxTimePerSession>0</maxTimePerSession>
  <minTimePerSession>0</minTimePerSession>
  <maxCountPerSession>0</maxCountPerSession>
  <environment>
    <!-- extend this for an environment for the experiments -->
  </environment>
  <database>
    <comment>This is a dummy in-memory DB. Replace this for a real one</comment>
  </database>
  <tasks>
    <populate>
      <numOfThreads ref="populateThreads"/>
      <classPath>bench-micro/target/classes</classPath>
      <packageName>com.nec.bench.micro.populate.entity</packageName>
      <process>
        <!-- EXTEND THIS -->
	   </process>
    </populate>
    <workload>
      <type>session</type>
      <classPath>bench-micro/target/classes</classPath>
      <numOfThreads ref="threadPerNode"/>
      <userNum ref="userNum"/>
      <minUid ref="minUid"/>
      <measure>
		<rampup ref="rampupTime"/>
		<duration ref="measureTime"/>
	  </measure>
	  <session>
	  	<maxTime ref="maxTimePerSession"/>
	  	<minTime ref="minTimePerSession"/>
	  	<maxCount ref="maxCountPerSession"/>
		<thinkTime>
			<before><time ref="beforeThinkTime"/></before>
			<after><time ref="afterThinkTime"/></after>
		</thinkTime>
		<packageName>com.nec.bench.micro.interactions.entity</packageName>
		<transitions><!-- EXTEND THIS --></transitions>
		<params extends="session/params">
			<USER_ID>
				<random partition="true">
					<type>int</type>
					<min ref="minUid"/><max ref="userNum"/></random>
			</USER_ID>
		</params>
	  </session>
	  
    </workload>
  </tasks>

</job>
