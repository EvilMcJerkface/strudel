<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>dist</id>
  <formats>
    <format>zip</format>
  </formats>
  <baseDirectory>config</baseDirectory>
  <fileSets>
    <fileSet>
      <directory>jobs</directory>
      <excludes>
        <exclude>**/congen-libs.properties</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>conf</directory>
      <excludes>
        <exclude>**/congen-libs.properties</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>env</directory>
      <excludes>
        <exclude>**/congen-libs.properties</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>assembly/dist-properties</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../store</directory>
      <outputDirectory>/store</outputDirectory>
      <includes>
        <include>**/*.xml</include>
      </includes>
      <excludes>
        <exclude>**/pom.xml</exclude>
        <exclude>**/target/**</exclude>
        <exclude>**/src/main/**</exclude>
        <exclude>**/src/test/**</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>../bench</directory>
      <outputDirectory>/bench</outputDirectory>
      <includes>
        <include>**/*.xml</include>
      </includes>
      <excludes>
        <exclude>**/pom.xml</exclude>
        <exclude>**/target/**</exclude>
        <exclude>**/src/main/**</exclude>
        <exclude>**/src/test/**</exclude>
      </excludes>
    </fileSet>
  </fileSets>
</assembly>
